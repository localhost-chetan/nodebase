    "db:push": "bunx --bun drizzle-kit push",
    "db:studio": "bunx --bun drizzle-kit studio"
  },
  "dependencies": {
    "better-auth": "^1.4.5",
    "drizzle-orm": "^0.44.7",
    "drizzle-query-logger": "^1.1.1",
    "hono": "^4.10.7"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.8"
  }
}